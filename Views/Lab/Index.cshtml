@model IEnumerable<MvcLabManager.Models.Lab>

@{
    ViewData["Title"] = "Labs";
}
<h1>@ViewData["Title"]</h1>

@if(Model.Count() == 0)
{
    <p>Nenhum computador cadastrado</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NÃºmero</th>
                <th>Nome</th>
                <th>Bloco</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach(var lab in Model)
            {
                <tr>
                    <td>@lab.Id</td>
                    <td>@lab.Number</td>
                    <td>@lab.Name</td>
                    <td>@lab.Block</td>
                    <td><a href="/Lab/Show/@lab.Id" class="btn btn-primary"> Ver </a></td>
                </tr>
            }
            
        </tbody>
    </table>
}